  <!-- Main Content Container -->
  <div class="main-content w-full max-w-8xl mx-auto px-4 flex flex-col desktop:flex-row items-center desktop:items-end justify-center desktop:justify-between gap-8 flex-1 pt-20 desktop:pt-0">

    
    


        <!-- Left Side - Text Content -->
    <div class="flex-1 flex flex-col justify-center items-center text-center lg:text-left z-10 lg:self-center">
      <!-- Main Title -->
      <h1 class="fingy-title text-center text-6xl sm:text-7xl lg:text-8xl xl:text-9xl font-bold mb-4 leading-none">
        $OTTIE
