      <!-- Mobile Navigation Links -->
       <div class="flex flex-col space-y-6 mb-8">
         <a href={PUMP_FUN_URL} target="_blank" rel="noopener noreferrer" class="block text-black font-bold text-xl hover:text-white transition-colors duration-200 py-2 border-b border-black/20">
           CONTRACT
         </a>
         <a href="#" class="block text-black font-bold text-xl hover:text-white transition-colors duration-200 py-2 border-b border-black/20">
           ABOUT
         </a>
         <a href={TWITTER_URL} target="_blank" rel="noopener noreferrer" class="block text-black font-bold text-xl hover:text-white transition-colors duration-200 py-2 border-b border-black/20">
           TWITTER
         </a>
         <a href={TIKTOK_URL} class="block text-black font-bold text-xl hover:text-white transition-colors duration-200 py-2 border-b border-black/20">
           TIKTOK
         </a>
         <a href={DEXSCREENER_URL} class="block text-black font-bold text-xl hover:text-white transition-colors duration-200 py-2 border-b border-black/20">
           DEXSCREENER
         </a>
       </div>
       
       <!-- Mobile CTA Button -->
       <a href={PUMP_FUN_URL} target="_blank" rel="noopener noreferrer" class="bg-black hover:bg-gray-800 text-white font-bold text-lg px-8 py-4 rounded-lg border-2 border-black shadow-lg transform transition-all duration-200 hover:scale-105 active:scale-95 text-center block hover:no-underline">
         BUY $OTTIE
