      <!-- Subtitle -->
      <p class="text-center text-xl sm:text-2xl lg:text-3xl text-black font-medium mb-8 max-w-md mx-auto lg:mx-0">
        The cutest, coolest and richest otter on Solana
      </p>
      
      <!-- CTA Button -->
      <a href={PUMP_FUN_URL} target="_blank" rel="noopener noreferrer" class="w-5/6 bg-white hover:scale-105 text-black font-bold text-lg sm:text-xl px-8 py-4 rounded-lg border-4 border-black shadow-lg transform transition-all duration-200 active:scale-95 text-center block hover:no-underline">
        BUY $OTTIE
      </a>
