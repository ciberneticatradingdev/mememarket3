      <a href={TWITTER_URL} target="_blank" rel="noopener noreferrer" class="font-semibold nav-link text-white text-sm xl:text-lg border border-transparent hover:border-white p-2 rounded-lg transition-colors duration-200 hover:no-underline">
        TWITTER
      </a>
      <!-- <a href={TIKTOK_URL} class="font-semibold nav-link text-white text-sm xl:text-lg border border-transparent hover:border-white p-2 rounded-lg transition-colors duration-200 hover:no-underline">
        TIKTOK
      </a> -->
      <a href={DEXSCREENER_URL} class="font-semibold nav-link text-white text-sm xl:text-lg border border-transparent hover:border-white p-2 rounded-lg transition-colors duration-200 hover:no-underline">
        DEXSCREENER
      </a>
    </div>
    
    <!-- Desktop CTA Button -->
    <a href={PUMP_FUN_URL} target="_blank" rel="noopener noreferrer" class="hidden desktop:flex bg-white hover:bg-gray-100 text-black font-bold text-sm xl:text-base px-3 xl:px-6 py-2 xl:py-3 rounded-lg border-2 border-black shadow-lg transform transition-all duration-200 hover:scale-105 active:scale-95 items-center justify-center hover:no-underline">
      BUY ON PUMP
    </a>
    
    <!-- Mobile Menu Button -->
    <button class="desktop:hidden text-white text-2xl p-2 hover:bg-white/10 rounded-lg transition-colors duration-200" id="mobile-menu-btn">
      <span class="block w-6 h-0.5 bg-white mb-1 transition-all duration-300" id="line1"></span>
      <span class="block w-6 h-0.5 bg-white mb-1 transition-all duration-300" id="line2"></span>
